<div>
    <h1>PRODUCTOS</h1>
    <form id="FormularioProduct" method="GET" action="/">
        <label for="category">Categoria: </label>
        <select name="category" id="category">
            <option value="">todos</option>
            <option value="Guitarras">Guitarras</option>
            <option value="Baterías">Baterías</option>
            <option value="Teclados">Teclados</option>
            <option value="Saxofones">Saxofones</option>
            <option value="Cuerdas">Cuerdas</option>
            <option value="Flautas">Flautas</option>
            <option value="Metales">Metales</option>
            <option value="Viento">Viento</option>
            <option value="Percusión">Percusión</option>
        </select>


        <label for="sort">Ordenar por precio:</label>
        <select name="sort" id="sort" >
            <option value="asc">Ascendente</option>
            <option value="desc">Descendente</option>
        </select>

        <div class="">
            <label for="limit">Productos a mostrar: </label>
            <div >
                <input type="range"  id="limit" name="limit" min="1" max="10" value="{{limit}}">
                <span id="limitValue">{{limit}}</span>
            </div>
        </div>

        <button type="submit" >Aplicar Filtros</button>
    </form>

    {{#if isValid}}
    <div>
        {{#if hasPrevPage}}
        <a href={{this.prevLink}}> << Anterior</a>
                {{/if}}
                &nbsp;
                {{this.page}}
                &nbsp;
                {{#if hasNextPage}}
                <a href={{this.nextLink}}>Siguiente >></a>
                {{/if}}
    </div>
    <div>
        {{#each docs}}
        <div class="productosHome">
            <p>Titulo: {{this.title}}</p>
            <p>Descripcion: {{this.description}}</p>
            <p>Precio: {{this.price}}</p>
            <p>Codigo: {{this.code}}</p>
            <p>Stock: {{this.stock}}</p>
            <p>Categoria: {{this.category}}</p>
            <button type="button" class="addToCartButton" data-id="{{this._id}}">Agregar al Carrito</button>
        </div>
        {{/each}}
    </div>
    <br />
    
    {{else}}
    <h1>No hay productos para mostrar</h1>
    {{/if}}

</div>




<script src="/socket.io/socket.io.js"></script>
<script src="../../public/js/index.js"></script>

<script>
        document.getElementById('limit').addEventListener('input', function() {
            document.getElementById('limitValue').textContent = this.value;
        });
    </script>